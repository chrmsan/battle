<p><%= @player_1.name %> versus <%= @player_2.name %></p>

<form action="/attack" method="post">
  <button type="submit" name="attack">Attack!</button>
</form>

<% if @attack %>
  <p><%= @player_1.name %> attacked <%= @player_2.name %>!</p>
<% end %>

<p><%= @player_2.name %> has <%= $player_2.hit_points %> hit points</p>
